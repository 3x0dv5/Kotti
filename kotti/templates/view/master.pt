<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:define-macro="main">

  <head>
	<title metal:define-slot="page-title">${api.page_title}</title>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
	<meta name="description" content="${api.context.description}" />
	<link rel="shortcut icon" href="${request.static_url('kotti:static/favicon.ico')}" />
	<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Neuton|Nobile:regular,i,b,bi&amp;subset=latin" type="text/css" media="screen" charset="utf-8" />
	<link rel="stylesheet" href="${request.static_url(api.base_css)}" type="text/css" media="screen" charset="utf-8" />
	<link rel="stylesheet" href="${request.static_url(api.view_css)}" type="text/css" media="screen" charset="utf-8" />
    <more tal:omit-tag="" metal:define-slot="head"></more>
  </head>

  <body class="view-view">
    <div id="skiplinks" class="hidden">
      <ul>
        <li><a href="#start-navigation">Skip to navigation</a></li>
        <li><a href="#start-content">Skip to content</a></li>
      </ul>
    </div>

    <!-- The tab to switch modes  -->
    <div id="switch-mode-box" class="vertical-text round-corners-top"
         tal:condition="api.has_permission('edit')">
      <a href="${api.url(context, '@@edit')}">Edit</a>
    </div>

    <div id="header">
      <nav id="site-navigation" class="top-navigation">
        <a id="start-navigation" name="start-navigation"></a>
        <div class="tabs1">
          <h2 class="hidden">Site navigation</h2>
          <ul>
            <li><a href="${api.url(api.root)}" class="${api.root == api.context and 'selected'}">Home</a></li>
            <li tal:repeat="item api.list_children(api.root)">
              <a href="${api.url(item)}"
                 class="${api.inside(api.context, item) and 'selected'}"
                 title="${item.description}">${item.title}</a>
            </li>
          </ul>
        </div>
        <div class="clear"></div>
      </nav>
    </div>

    <!-- The main diff -->
    <div id="main">
      <div id="right-column">
        <div id="local-navigation">
          <h2 class="hidden">Local navigation</h2>
          <ul tal:define="(parent, children) api.list_children_go_up()"
              tal:condition="children and parent != api.root">
            <li>
              <a href="${api.url(parent)}" title="${parent.description}"
                 class="${parent == api.context and 'selected' or ''}">
                ${parent.title}
              </a>
            </li>
            <li tal:repeat="item children">
              <a href="${api.url(item)}" title="${item.description}"
                 class="${item == api.context and 'selected' or ''}">
                ${item.title}
              </a>
            </li>
          </ul>
        </div>
      </div>

      <div id="main-column">
        <div metal:use-macro="api['snippets.messages']">
        </div>
        <a id="start-content" name="start-content"></a>
        <div id="main-content">
          <div metal:define-slot="content">
            <h1>${api.context.title}</h1>
          </div>
        </div>
      </div>
    </div>

    <div id="footer">
    </div>

  </body>
</html>
