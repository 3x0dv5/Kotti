<ul class="breadcrumb"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="Kotti"
    tal:define="tags [i for i in context.tags]"
    tal:condition="len(tags) > 0">
  <span tal:omit-tag="" i18n:translate="">Tagged with:</span>
  <tal:repeat tal:repeat="tag tags">
    <li tal:define="first repeat.tag.start; last repeat.tag.end"
        class="${last and 'active' or None}">

      <a href="${api.url(api.root)}@@search-results-for-tags?tag_terms=${tag}">${tag}
      </a>

      <span tal:condition="len(tags) > 1" class="divider">,</span>
    </li>
  </tal:repeat>
</ul>
